key = {
	type = type_name

	icon = name			# Необязательно, используйте это имя вместо клавиши при выборе графических значков
	can_recruit = { } 	# Укажите в области видимости персонажа, можете ли вы его завербовать. Необязательный. Взаимоисключающие и открывающиеся благодаря инновациям


	pursuit = 10		# Урон, наносимый в фазе преследования, если он на стороне победителя
	screen = 10			# Урон уменьшен в фазе преследования, если он на стороне проигравшего
	damage = 50			# Нанесенный урон
	toughness = 40		# Способность поглощать урон
	siege_value = 0.1	# Насколько это способствует осадам
	max = 3				# Отменяет базовое ограничение на размер MaA. Суммируется с любыми другими бонусами на размер MaA

	fights_in_main_phase = no # Если установлено, влияет только на фазу преследования. Удобно для осадных орудий
	siege_tier = 1		# Насколько он хорош в борьбе с фортами

	buy_cost = { gold = 0 prestige = 0 piety = 0 } # Расходы. Поддерживайте золото, престиж и благочестие
	low_maintenance_cost = { gold = 2 }		# Содержание оплачивается, когда полк не сформирован и полностью усилен, или когда подкрепление выведено из строя
	high_maintenance_cost = { gold = 10 }	# Содержание выплачивается, когда полк увеличивается или не полностью усиливается
	
	# Бонусы за прохождение местности, siege_value, etc.
	terrain_bonus = {
		plains = { damage = 10 }
	}
	
	# Каким архетипам он противостоит и в каком количестве. Число - это количество подсегментов, которым он противостоит
	counters = {
		pikemen = 1
		archers = 1
	}

	stack = 100 # Размер одного подполка
	hired_stack_size = 25 # размер подразделения для наемных войск. Если значение не задано, оно будет таким же, как и значение "stack"

	ai_quality = { ... }	# Значение скрипта в области символов. Используется в дополнение к расчету качества (based on TOUGHNESS_SCORE_MULT, etc.) to figure out what the AI should buy/disband

	fallback_in_hired_troops_if_unlocked = yes	#Наемники/святые ордена не будут отдавать предпочтение этому человеку, если он будет разблокирован
	mercenary_fallback = no						# Наемник будет иметь более низкий приоритет при использовании этого типа
	holy_order_fallback = no					# Священный орден будет иметь более низкий приоритет при использовании этого типа
	allowed_in_hired_troops = yes				# MaA тип может быть использован в наемных войсках
	max_sub_regiments = -1						# В случае положительного результата может быть создан только один полк такого типа и такого максимального размера. Бонусы к размеру полка MaA не влияют
}

== Base type modifiers ==
All get prefixed with the base type. E.G., "max_size_add" will become type_key_max_size_add.
max_size_add/mult
siege_value_add/mult
damage_add/mult
toughness_add/mult
pursuit_add/mult
screen_add/mult
maintenance_mult
recruitment_cost_mult
